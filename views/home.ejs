<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        width: 100vw;
      }

      h1 {
        text-align: center;
      }

      form {
        margin-bottom: 20px;
      }

      label {
        font-weight: bold;
      }

      input[type="text"] {
        width: 100%;
        margin-bottom: 10px;
        padding: 5px;
      }

      button[type="submit"] {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
      }

      button[type="submit"]:hover {
        background-color: #0056b3;
      }

      table {
        width: 100vw;
        border-collapse: collapse;
      }

      th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #f2f2f2;
      }

      a {
        text-decoration: none;
        color: #007bff;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <p>
      URL Generated :
      <a href="http://localhost:8001/url/<%= id %>"
        >http://localhost:8001/url/<%= id %></a
      >
    </p>
    <% } %>
    <div>
      <form method="post" action="/url">
        <label for="url">Enter your Original URL</label><br />
        <input type="text" name="url" placeholder="https://example.com" /><br />
        <button type="submit">Generate</button>
      </form>
    </div>
    <% if (locals.urls) { %>
    <div>
      <table>
        <thead>
          <th>S.No</th>
          <th>ShortID</th>
          <th>Redirect URL</th>
          <th>Visited</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <!-- Corrected url to urls -->
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitedHistory.length %></td>
            
            
          </tr>
          
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </body>
</html>
